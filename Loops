int i = 0;
		do {
			i++;
			System.out.println(i);
		} while (i < 5);

		while (i < 5) {
			i++;
			System.out.println(i);
		}

		for (int i = 0; i < 5; i++) {
			for (int j = 0; j <i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		
		int n=5;
		for (int i = 0; i <n; i++) {
			for (int j = n; j > i; j--) {
				System.out.print("*");
			}
			System.out.println();
		}
